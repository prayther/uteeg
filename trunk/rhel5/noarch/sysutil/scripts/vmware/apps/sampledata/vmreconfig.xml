<?xml version="1.0"?>

<!-- This is a sample xml file used for reconfigure a virtual machine and 
it contains the reconfiguration parameters which can be used to reconfigure the
VM. The user can use this file as a referance to
create there own input XML files and specify the file's location using <filename>
-->
 <Reconfigure-Virtual-Machine>
   <Name>ToMigrate</Name>
   <Host>192.168.111.2</Host>         
   <Add-Device>
      <Network-Adapter>
	     <Name></Name>
	  </Network-Adapter>
      <Floppy-Drive>
	     <Name></Name>
	  </Floppy-Drive>
	  <CD-DVD-Drive>
	     <Name></Name>
	  </CD-DVD-Drive>
	  <Hard-Disk>
	     <Name></Name>
		 <Size></Size>
		 <Persistent-Mode></Persistent-Mode>
	  </Hard-Disk>
   </Add-Device>
   <Remove-Device>
      <Network-Adapter>
	     <Name></Name>
	  </Network-Adapter>
      <Floppy-Drive>
         <Name></Name>
	  </Floppy-Drive>
	  <CD-DVD-Drive>
	     <Name></Name>
	  </CD-DVD-Drive>
	  <Hard-Disk>
	     <Name></Name>
	  </Hard-Disk>
   </Remove-Device>
   <Connect-Device>
      <Network-Adapter>
	     <Name></Name>
	  </Network-Adapter>
      <Floppy-Drive>
	     <Name></Name>
	  </Floppy-Drive>
	  <CD-DVD-Drive>
	     <Name></Name>
	  </CD-DVD-Drive>
   </Connect-Device>
   <Disconnect-Device>
      <Network-Adapter>
	     <Name></Name>
	  </Network-Adapter>
      <Floppy-Drive>
	     <Name></Name>
	  </Floppy-Drive>
	  <CD-DVD-Drive>
	     <Name></Name>
	  </CD-DVD-Drive>
   </Disconnect-Device>
   <PowerOn-Flag>
      <Network-Adapter>
	     <Name></Name>
		 <PowerOn></PowerOn>
	  </Network-Adapter>
      <Floppy-Drive>
         <Name></Name>
		 <PowerOn></PowerOn>
      </Floppy-Drive>
	  <CD-DVD-Drive>
         <Name></Name>
		 <PowerOn></PowerOn>
      </CD-DVD-Drive>
   </PowerOn-Flag>
   <Shares>
      <CPU></CPU>
      <Memory></Memory>
   </Shares>
 </Reconfigure-Virtual-Machine>
