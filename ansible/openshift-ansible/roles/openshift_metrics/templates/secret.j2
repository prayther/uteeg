apiVersion: v1
kind: Secret
metadata:
  name: "{{ name }}"
{% if annotations is defined%}
  annotations:
{% for key, value in annotations.items() %}
    {{key}}: {{value}}
{% endfor %}
{% endif %}
  labels:
{% for k, v in labels.items() %}
    {{ k }}: {{ v }}
{% endfor %}
data:
{% for k, v in data.items() %}
  {{ k }}: {{ v }}
{% endfor %}
